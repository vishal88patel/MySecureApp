<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomActivity">

    <TextView
        android:id="@+id/getlogsfromapp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingBottom="4dp"
        android:text="Logs will show here after typing in Webview"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_x="174dp"
        android:layout_y="4dp"
        app:layout_constraintBottom_toTopOf="@id/web_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getlogsfromapp" />

    <com.example.my_secure_app.MyWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list"
        tools:layout_editor_absoluteX="98dp" android:layout_height="0dp"    />


</androidx.constraintlayout.widget.ConstraintLayout>